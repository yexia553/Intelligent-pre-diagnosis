/* pages/contact/contact.wxss */

page {
  background-color: #f1f1f1;
  margin: 0;
  padding: 0;
}
#notive {  
  position: fixed;  
  top: 0;  
  left: 0;  
  width: 100%;  
  z-index: 1000;
  max-height: 40px;  
}  
.inputRoom {
  width: 100vw;
  height: 16vw;
  border-top: 1px solid #cdcdcd;
  background-color: #f1f1f1;
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
  z-index: 20;
}

input {
  width: 68vw;
  height: 9.33vw;
  background-color: #fff;
  border-radius: 40rpx;
  margin-left: 2vw;
  padding: 0 3vw;
  font-size: 28rpx;
  color: #444;
}

.leftMsg {
  font-size: 35rpx;
  color: #444;
  line-height: 7vw;
  padding: 2vw 2.5vw;
  background-color: #fff;
  margin-left: -1.6vw;
  border-radius: 10rpx;
  z-index: 10;
}

.rightMsg {
  font-size: 35rpx;
  color: #444;
  line-height: 7vw;
  padding: 2vw 2.5vw;
  background-color: #96EB6A;
  margin-right: -1.6vw;
  border-radius: 10rpx;
  z-index: 10;
}

.sendBtn {
  margin-left: 1rem;
}

.show_msg {
  width: 20vw;
  font-size: 25rpx;
  color: #444;
  padding: 0 10px;
  text-align: center;
  word-wrap: break-word;
}